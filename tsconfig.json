{
    "compilerOptions": {
      "target": "es5", 
      "lib": ["dom", "es6"], 
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "jsx": "react-jsx", 
      "moduleResolution": "node",
      "strict": true, 
      "module": "esnext",
      "resolveJsonModule": true,
      "outDir": "./build"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  